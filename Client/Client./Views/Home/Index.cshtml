@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>CMPD Statistics</h1>
    <p id="home-container" class="lead">
        The City of Charlotte believes in providing accessible data and readily available information about City operations in the spirit of
        transparency and open government. Open access to City data provides citizens with a higher degree of visibility into public services
        to enhance and sustain trust.  
    </p>
</div>

<div class="row" id="button-group-main">
    <div class="btn-group" role="group" aria-label="Basic example">
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Officer Involved Shootings <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#" id="shootings-table-button">Table</a></li>
                <li><a href="#" id="shootings-dashboard-button">Dash Board</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Employee Demogrphics <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a id="demographis-table-button">Table</a></li>
                <li><a href="#" id="shootings-table-button">Dash Board</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Traffic Stops <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a id="traffic-table-button" >Table</a></li>
                <li><a href="#" id="shootings-table-button">Dash Board</a></li>
            </ul>
        </div>

    </div>
    
    <div id="dashboard-container" style="display: none;">
        <canvas class="chart" id="OIS-stacked-bar-chart" ></canvas>
        <canvas class="chart" id="OIS-radar-chart" ></canvas>
        <canvas class="chart" id="OIS-line-chart" ></canvas>
    </div>
    

    <div id="table-container" style="display: none;">
        <table id="table-1"></table>
    </div>

    

</div>



